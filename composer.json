{
  "name": "utnaf/golem",
  "description": "Despite the cool name, it's just a docker bootstrap with PHP, Apache and MariaDb.",
  "type": "composer-plugin",
  "keywords": ["docker", "php", "apache", "mysql"],
  "homepage": "https://github.com/utnaf/golem",
  "license": "WTFPL",
  "authors": [
    {
      "name": "Davide Effe",
      "email": "utnaf.dev@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
        "Golem\\": ["src/Golem/", "test/"]
    }
  },
  "require": {
    "php": "^7.1",
    "composer-plugin-api": "^1.1"
  },
  "require-dev": {
    "composer/composer": "^1.0",
    "mikey179/vfsStream": "^1.6",
    "phpunit/phpunit": "^7.5"
  },
  "extra": {
    "class": "Golem\\Plugin\\Build"
  },
  "scripts": {
    "test": [
      " docker run --rm --name golem-phpunit-tests -v \"$PWD\":/usr/src/golem -w /usr/src/golem php:7.3-cli php vendor/bin/phpunit"
    ]
  }
}
